%h1
  Editing
  =@encounter.name

= form_for @encounter do |f|
  - if @encounter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@encounter.errors.count, "error")} prohibited this encounter from being saved:"
      %ul
        - @encounter.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save', {:class=>"button"}
    = link_to 'Back', show_encounter_encounter_path(@encounter), {:class=>"button"}
