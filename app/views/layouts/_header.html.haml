#header
  .header-content
    =link_to(root_path, class:'menuButton') do
      =image_tag 'dndtoolslogo.png', class: 'logo-image'
    .headerUserActions
      - if current_user
        = link_to current_user.email, root_path
        = link_to 'Logout', :logout, method: :post, id: 'logout'
      - else
        = link_to 'Sign up', new_user_path, id: 'sign-up'
        %a#login{href: '#'} Login
    #login-form
      = render 'layouts/login_form'